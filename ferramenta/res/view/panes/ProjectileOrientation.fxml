<?xml version="1.0" encoding="UTF-8"?>

<?import br.edu.ifce.cgt.application.controller.ui.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root type="javafx.scene.layout.VBox" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <javafx.scene.layout.GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="300.0">
          <columnConstraints>
              <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="120.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="90.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="90.0" />
          </columnConstraints>
          <rowConstraints>
              <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
          </rowConstraints>
           <children>
              <Label text="Position Relative" />
              <Label text="Actor State" GridPane.rowIndex="1" />
               <IntegerTextField fx:id="txtPosRelX" GridPane.columnIndex="1" />
               <IntegerTextField fx:id="txtPosRelY" GridPane.columnIndex="2" />
              <ComboBox fx:id="boxStates" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               <Button mnemonicParsing="false" onAction="#addState" text="+" GridPane.columnIndex="2" GridPane.rowIndex="1" />
               <VBox fx:id="panStates" GridPane.columnSpan="3" GridPane.rowIndex="2" />
           </children>
      </javafx.scene.layout.GridPane>
      <HBox alignment="CENTER_RIGHT">
         <children>
            <Button mnemonicParsing="false" onAction="#confirm" text="Adicionar" />
         </children>
      </HBox>
   </children>
</fx:root>
