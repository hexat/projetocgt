<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import br.edu.ifce.cgt.application.controller.ui.FloatTextField?>
<fx:root type="javafx.scene.layout.AnchorPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <ScrollPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
            <content>
                <Accordion>
                    <panes>
                        <TitledPane text="Geral">
                            <content>
                                <GridPane alignment="TOP_CENTER" hgap="10.0" vgap="10.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="ALWAYS" />
                                        <ColumnConstraints hgrow="ALWAYS" />
                                        <ColumnConstraints hgrow="ALWAYS" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints vgrow="SOMETIMES" />
                                        <RowConstraints vgrow="SOMETIMES" />
                                        <RowConstraints vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <Label text="Nome" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                        <Label text="Plano de fundo" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                        <Label text="Música" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                        <TextField fx:id="worldTextField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                        <TextField fx:id="backgroundTextField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                        <TextField fx:id="musicTextField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                        <Button fx:id="selectBackgroundButton" mnemonicParsing="false" onAction="#selectBackground" text="..." GridPane.columnIndex="2" GridPane.rowIndex="1" />
                                        <Button fx:id="selectMusic" mnemonicParsing="false" onAction="#selectMusic" text="..." GridPane.columnIndex="2" GridPane.rowIndex="2" />
                                    </children>
                           <padding>
                              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                           </padding>
                                </GridPane>
                            </content>
                        </TitledPane>
                        <TitledPane text="Configurações de vitória">
                            <content>
                                <GridPane hgap="20.0" vgap="20.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="ALWAYS" />
                                        <ColumnConstraints hgrow="ALWAYS" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints vgrow="SOMETIMES" />
                                        <RowConstraints vgrow="SOMETIMES" />
                                        <RowConstraints vgrow="SOMETIMES" />
                                        <RowConstraints vgrow="SOMETIMES" />
                                        <RowConstraints vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <Label text="Critérios de vitória:" />
                                        <CheckBox fx:id="killEnemiesCheckbox" mnemonicParsing="false" text="Eliminar os inimigos" GridPane.rowIndex="1" />
                                        <CheckBox fx:id="surviveCheckbox" mnemonicParsing="false" text="Sobreviver" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                        <CheckBox fx:id="getBonusCheckbox" mnemonicParsing="false" text="Pegar bônus" GridPane.rowIndex="2" />
                                        <CheckBox fx:id="completeCrossingCheckbox" mnemonicParsing="false" text="Completar percurso" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                        <CheckBox fx:id="targetScoreCheckbox" mnemonicParsing="false" text="Atingir pontuação" GridPane.rowIndex="3" />
                                        <Label text="Mensagem da vitória" GridPane.rowIndex="4" />
                                        <HBox alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="4">
                                            <children>
                                                <Button mnemonicParsing="false" onAction="#configWinDialog" text="Configurar" />
                                                <Button fx:id="removeWinDialogButton" mnemonicParsing="false" text="Remover" />
                                            </children>
                                        </HBox>
                                    </children>
                           <padding>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </padding>
                                </GridPane>
                            </content>
                        </TitledPane>
                        <TitledPane text="Configurações de derrota">
                            <content>
                                <GridPane hgap="20.0" vgap="20.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="ALWAYS" />
                                        <ColumnConstraints hgrow="ALWAYS" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints vgrow="SOMETIMES" />
                                        <RowConstraints vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <CheckBox fx:id="actorDeadCheckbox" mnemonicParsing="false" text="Ator morrer" />
                                        <CheckBox fx:id="targetTimeCheckbox" mnemonicParsing="false" text="Contagem regressiva" GridPane.columnIndex="1" />
                                        <Label text="Mensagem da derrota" GridPane.rowIndex="1" />
                                        <HBox alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                            <children>
                                                <Button mnemonicParsing="false" onAction="#configLoseDialog" text="Configurar" />
                                                <Button fx:id="removeLoseDialogButton" mnemonicParsing="false" text="Remover" />
                                            </children>
                                        </HBox>
                                    </children>
                           <padding>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </padding>
                                </GridPane>
                            </content>
                        </TitledPane>
                        <TitledPane text="Configurações de pausa">
                            <content>
                                <GridPane hgap="20.0" vgap="20.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="ALWAYS" />
                                        <ColumnConstraints hgrow="ALWAYS" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints vgrow="SOMETIMES" />
                                        <RowConstraints vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <Label text="Mensagem da pausa" />
                                        <HBox alignment="CENTER" GridPane.columnIndex="1">
                                            <children>
                                                <Button mnemonicParsing="false" onAction="#configPauseDialog" text="Configurar" />
                                                <Button fx:id="removePauseDialogButton" mnemonicParsing="false" text="Remover" />
                                            </children>
                                        </HBox>
                                    </children>
                           <padding>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </padding>
                                </GridPane>
                            </content>
                        </TitledPane>
                  <TitledPane text="Configurações da câmera">
                     <content>
                         <GridPane hgap="10.0" vgap="10.0">
                             <columnConstraints>
                                 <ColumnConstraints hgrow="SOMETIMES" />
                                 <ColumnConstraints hgrow="SOMETIMES" />
                                 <ColumnConstraints hgrow="SOMETIMES"/>
                             </columnConstraints>
                             <rowConstraints>
                                 <RowConstraints  vgrow="SOMETIMES" />
                                 <RowConstraints vgrow="SOMETIMES" />
                                 <RowConstraints  vgrow="SOMETIMES" />
                                 <RowConstraints vgrow="SOMETIMES" />
                                 <RowConstraints  vgrow="SOMETIMES" />
                                 <RowConstraints  vgrow="SOMETIMES" />
                             </rowConstraints>
                             <children>
                                 <Label text="Modo de Jogo"></Label>
                                 <Label text="Tamanho Inicial" GridPane.rowIndex="1" />
                                 <Label text="Tamanho Fechado" GridPane.rowIndex="2" />
                                 <Label text="Tamanho Aberto" GridPane.rowIndex="3" />
                                 <Label text="Escala" GridPane.rowIndex="4" />
                                 <Label text="Volume em Camera Cheia" GridPane.rowIndex="5" />
                                 <ComboBox fx:id="boxGameMode" GridPane.columnIndex="1" GridPane.columnSpan="2" />
                                 <FloatTextField fx:id="txtInitialWidth" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                 <FloatTextField fx:id="txtInitialHeight" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                                 <FloatTextField fx:id="txtCloseWidth" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                 <FloatTextField fx:id="txtCloseHeight" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                                 <FloatTextField fx:id="txtFullWidth" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                 <FloatTextField fx:id="txtFullHeight" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                                 <FloatTextField fx:id="txtScale" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                 <FloatTextField fx:id="txtVolumeFull" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                             </children>
                             <padding>
                                 <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                             </padding>
                         </GridPane>
                     </content>
                  </TitledPane>
                    </panes>
                </Accordion>
            </content>
        </ScrollPane>
    </children>
</fx:root>
