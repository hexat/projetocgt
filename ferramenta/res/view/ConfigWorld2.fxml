<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<fx:root type="javafx.scene.layout.AnchorPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <ScrollPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
            <content>
                <Accordion>
                    <panes>
                        <TitledPane animated="false" text="Geral">
                            <content>
                                <GridPane alignment="TOP_CENTER">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="187.0" minWidth="10.0"
                                                           prefWidth="103.0"/>
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="406.0" minWidth="10.0"
                                                           prefWidth="148.0"/>
                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="391.0" minWidth="29.0"
                                                           prefWidth="36.0"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints maxHeight="86.0" minHeight="7.0" prefHeight="30.0"
                                                        vgrow="SOMETIMES"/>
                                        <RowConstraints maxHeight="179.0" minHeight="10.0" prefHeight="38.0"
                                                        vgrow="SOMETIMES"/>
                                        <RowConstraints maxHeight="229.0" minHeight="10.0" prefHeight="34.0"
                                                        vgrow="SOMETIMES"/>
                                    </rowConstraints>
                                    <children>
                                        <Label text="Nome" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                                        <Label text="Plano de fundo" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                                        <Label text="Música" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                                        <TextField fx:id="worldTextField" editable="false" GridPane.columnIndex="1"
                                                   GridPane.rowIndex="0"/>
                                        <TextField fx:id="backgroundTextField" editable="false" GridPane.columnIndex="1"
                                                   GridPane.rowIndex="1"/>
                                        <TextField fx:id="musicTextField" editable="false" GridPane.columnIndex="1"
                                                   GridPane.rowIndex="2"/>
                                        <Button fx:id="selectBackgroundButton" mnemonicParsing="false"
                                                onAction="#selectBackground" text="..." GridPane.columnIndex="2"
                                                GridPane.rowIndex="1"/>
                                        <Button fx:id="selectMusic" mnemonicParsing="false" onAction="#selectMusic"
                                                text="..." GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                                    </children>
                                </GridPane>
                            </content>
                        </TitledPane>
                        <TitledPane animated="false" text="Configurações de vitória">
                            <content>
                                <GridPane>
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                    </rowConstraints>
                                    <children>
                                        <Label text="Critérios de vitória:"/>
                                        <CheckBox fx:id="killEnemiesCheckbox" mnemonicParsing="false"
                                                  text="Eliminar os inimigos"
                                                  GridPane.rowIndex="1"/>
                                        <CheckBox fx:id="surviveCheckbox" mnemonicParsing="false" text="Sobreviver"
                                                  GridPane.columnIndex="1"
                                                  GridPane.rowIndex="1"/>
                                        <CheckBox fx:id="getBonusCheckbox" mnemonicParsing="false" text="Pegar bônus"
                                                  GridPane.rowIndex="2"/>
                                        <CheckBox fx:id="completeCrossingCheckbox" mnemonicParsing="false"
                                                  text="Completar percurso"
                                                  GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                                        <CheckBox fx:id="targetScoreCheckbox" mnemonicParsing="false"
                                                  text="Atingir pontuação"
                                                  GridPane.rowIndex="3"/>
                                        <Label text="Mensagem da vitória" GridPane.rowIndex="4"/>
                                        <HBox alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="4">
                                            <children>
                                                <Button mnemonicParsing="false" text="Configurar"/>
                                                <Button mnemonicParsing="false" text="Remover"/>
                                            </children>
                                        </HBox>
                                    </children>
                                </GridPane>
                            </content>
                        </TitledPane>
                        <TitledPane animated="false" text="Configurações de derrota"/>
                        <TitledPane prefHeight="200.0" prefWidth="200.0" text="Configurações de pausa"/>
                    </panes>
                </Accordion>
            </content>
        </ScrollPane>
    </children>
</fx:root>
