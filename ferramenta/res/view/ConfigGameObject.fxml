<?xml version="1.0" encoding="UTF-8"?>

<?import br.edu.ifce.cgt.application.controller.ui.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<fx:root type="javafx.scene.layout.StackPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Accordion>
            <panes>
                <TitledPane text="Configurações gerais do objeto">
                    <content>
                        <GridPane alignment="TOP_CENTER" hgap="5.0" vgap="5.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES"/>
                                <ColumnConstraints hgrow="SOMETIMES"/>
                                <ColumnConstraints hgrow="SOMETIMES" prefWidth="60"/>
                                <ColumnConstraints hgrow="SOMETIMES" prefWidth="60"/>
                                <ColumnConstraints hgrow="SOMETIMES" prefWidth="60"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints vgrow="SOMETIMES"/>
                                <RowConstraints vgrow="SOMETIMES"/>
                                <RowConstraints vgrow="SOMETIMES"/>
                                <RowConstraints vgrow="SOMETIMES"/>
                                <RowConstraints vgrow="SOMETIMES"/>
                                <RowConstraints vgrow="SOMETIMES"/>
                                <RowConstraints vgrow="SOMETIMES"/>
                                <RowConstraints vgrow="SOMETIMES"/>
                                <RowConstraints vgrow="SOMETIMES"/>
                                <RowConstraints vgrow="SOMETIMES"/>
                                <RowConstraints vgrow="SOMETIMES"/>
                                <RowConstraints vgrow="SOMETIMES"/>
                                <RowConstraints vgrow="SOMETIMES"/>
                                <RowConstraints vgrow="SOMETIMES"/>
                                <RowConstraints vgrow="SOMETIMES"/>
                                <RowConstraints vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Label text="Animações"/>
                                <Button mnemonicParsing="false" onAction="#addAnimation" text="+"
                                        GridPane.columnIndex="1"/>

                                <Label fx:id="labMaxLife" text="Máxima vida" GridPane.rowIndex="2"/>
                                <IntegerTextField fx:id="txtMaxLife" GridPane.columnIndex="1" GridPane.columnSpan="4"
                                                  GridPane.rowIndex="2"/>

                                <Label fx:id="labLife" text="Vida" GridPane.rowIndex="3"/>
                                <IntegerTextField fx:id="txtLife" GridPane.columnIndex="1" GridPane.columnSpan="4"
                                                  GridPane.rowIndex="3"/>

                                <Label text="Posições Iniciais" GridPane.columnSpan="1" GridPane.rowIndex="4"/>
                                <IntegerTextField fx:id="txtPositionX" promptText="x" GridPane.columnIndex="1"
                                                  GridPane.rowIndex="4"/>
                                <IntegerTextField fx:id="txtPositionY" promptText="y" GridPane.columnIndex="2"
                                                  GridPane.rowIndex="4"/>
                                <Button mnemonicParsing="false" onAction="#addInitialPosition" text="+"
                                        GridPane.columnIndex="3" GridPane.rowIndex="4"/>

                                <VBox fx:id="boxPositions" alignment="CENTER" GridPane.columnSpan="5"
                                      GridPane.rowIndex="5">
                                    <padding>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                    </padding>
                                </VBox>

                                <Label text="Dimensões" GridPane.rowIndex="6"/>
                                <FloatTextField fx:id="txtBoundsW" promptText="Largura" GridPane.columnIndex="1"
                                                GridPane.columnSpan="2" GridPane.rowIndex="6"/>
                                <FloatTextField fx:id="txtBoundsH" promptText="Altura" GridPane.columnIndex="3"
                                                GridPane.columnSpan="2" GridPane.rowIndex="6"/>

                                <Label text="Colisão" GridPane.rowIndex="7"/>
                                <IntegerTextField fx:id="txtColisionX" promptText="x" GridPane.columnIndex="1"
                                                  GridPane.rowIndex="7"/>
                                <IntegerTextField fx:id="txtColisionY" promptText="y" GridPane.columnIndex="2"
                                                  GridPane.rowIndex="7"/>
                                <FloatTextField fx:id="txtColisionW" promptText="Largura" GridPane.columnIndex="3"
                                                GridPane.rowIndex="7"/>
                                <FloatTextField fx:id="txtColisionH" promptText="Altura" GridPane.columnIndex="4"
                                                GridPane.rowIndex="7"/>

                                <Label text="Velocidade" GridPane.rowIndex="8"/>
                                <IntegerTextField fx:id="txtVelocidade" GridPane.columnIndex="1" GridPane.columnSpan="4"
                                                  GridPane.rowIndex="8"/>
                            </children>
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </padding>
                        </GridPane>
                    </content>
                </TitledPane>
                <TitledPane text="Animações do objeto">
                    <content>
                        <VBox>
                            <children>
                                <GridPane hgap="10.0" vgap="10.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="ALWAYS"/>
                                        <ColumnConstraints hgrow="ALWAYS"/>
                                        <ColumnConstraints hgrow="ALWAYS"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints vgrow="ALWAYS"/>
                                        <RowConstraints vgrow="ALWAYS"/>
                                        <RowConstraints vgrow="ALWAYS"/>
                                        <RowConstraints vgrow="ALWAYS"/>
                                        <RowConstraints vgrow="ALWAYS"/>
                                        <RowConstraints vgrow="ALWAYS"/>
                                        <RowConstraints vgrow="ALWAYS"/>
                                        <RowConstraints vgrow="ALWAYS"/>
                                        <RowConstraints vgrow="ALWAYS"/>
                                    </rowConstraints>
                                    <children>
                                        <Label text="Spritesheet"/>
                                        <ComboBox fx:id="spritesheetCombobox" prefWidth="150.0" GridPane.columnIndex="1"
                                                  GridPane.columnSpan="2"/>
                                        <Button mnemonicParsing="false" text="Adicionar" GridPane.columnIndex="2"/>
                                        <Label text="Frame inicial" GridPane.rowIndex="1"/>
                                        <ComboBox fx:id="initialFrameCombobox" prefWidth="250.0"
                                                  GridPane.columnIndex="1" GridPane.columnSpan="2"
                                                  GridPane.rowIndex="1"/>
                                        <Label text="Frame final" GridPane.rowIndex="2"/>
                                        <ComboBox fx:id="finalFrameCombobox" prefWidth="250.0" GridPane.columnIndex="1"
                                                  GridPane.columnSpan="2" GridPane.rowIndex="2"/>
                                        <Label text="Velocidade" GridPane.rowIndex="3"/>
                                        <FloatTextField fx:id="speedField" GridPane.columnIndex="1"
                                                        GridPane.columnSpan="2" GridPane.rowIndex="3"/>
                                        <Label text="Política" GridPane.rowIndex="4"/>
                                        <ComboBox fx:id="policyCombobox" prefWidth="250.0" GridPane.columnIndex="1"
                                                  GridPane.columnSpan="2" GridPane.rowIndex="4"/>
                                        <CheckBox fx:id="vflipCheckBox" mnemonicParsing="false" text="Flip vertical"
                                                  GridPane.columnIndex="1" GridPane.rowIndex="7"/>
                                        <CheckBox fx:id="hflipCheckbox" mnemonicParsing="false" text="Flip horizontal"
                                                  GridPane.rowIndex="7"/>
                                        <Label text="Estado" GridPane.rowIndex="5"/>
                                        <ComboBox fx:id="stateBox" prefWidth="150.0" GridPane.columnIndex="1"
                                                  GridPane.rowIndex="5"/>
                                        <Button onAction="#addState" text="Adicionar" GridPane.columnIndex="2"
                                                GridPane.rowIndex="5"/>
                                        <ScrollPane prefHeight="100.0" GridPane.columnSpan="3" GridPane.rowIndex="6">
                                            <content>
                                                <VBox fx:id="states" alignment="CENTER">
                                                    <children>
                                                        <Label text="Adicione pelo menos um estado."/>
                                                    </children>
                                                </VBox>
                                            </content>
                                        </ScrollPane>
                                    </children>
                                    <VBox.margin>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                    </VBox.margin>
                                </GridPane>
                                <Button mnemonicParsing="false" onAction="#addObjAnimation" text="Salvar">
                                    <VBox.margin>
                                        <Insets/>
                                    </VBox.margin>
                                </Button>
                                <Label text="Animações:">
                                    <VBox.margin>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="20.0"/>
                                    </VBox.margin>
                                </Label>
                                <ScrollPane prefHeight="100.0">
                                    <content>
                                        <VBox fx:id="animationsBox" alignment="CENTER">
                                            <children>
                                                <Label text="Selecione uma animação."/>
                                            </children>
                                        </VBox>
                                    </content>
                                    <VBox.margin>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                    </VBox.margin>
                                </ScrollPane>
                            </children>
                        </VBox>
                    </content>
                </TitledPane>
                <TitledPane text="Sons do objeto">
                    <content>
                        <GridPane alignment="CENTER_LEFT" hgap="10.0" vgap="10.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES"/>
                                <ColumnConstraints/>
                                <ColumnConstraints/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints vgrow="SOMETIMES"/>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                                <RowConstraints/>
                            </rowConstraints>
                            <children>
                                <Label text="Som"/>
                                <TextField fx:id="txtSound" GridPane.columnIndex="1"/>
                                <Button mnemonicParsing="false" onAction="#setSoundObject" text="..."
                                        GridPane.columnIndex="2"/>
                                <Label text="Som de colisão" GridPane.columnSpan="2" GridPane.rowIndex="1"/>
                                <Button mnemonicParsing="false" onAction="#addSoundCollision" text="+"
                                        GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                                <VBox fx:id="boxSoundColision" alignment="CENTER" GridPane.columnSpan="3"
                                      GridPane.rowIndex="2">
                                    <padding>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                    </padding>
                                </VBox>
                                <Label text="Som de morte" GridPane.columnSpan="2" GridPane.rowIndex="3"/>
                                <Button mnemonicParsing="false" onAction="#addSoundDie" text="+"
                                        GridPane.columnIndex="2" GridPane.rowIndex="3"/>
                                <VBox fx:id="boxSoundDie" alignment="CENTER" GridPane.columnSpan="3"
                                      GridPane.rowIndex="4">
                                    <padding>
                                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                    </padding>
                                </VBox>
                            </children>
                        </GridPane>
                    </content>
                </TitledPane>
            </panes>
        </Accordion>
    </children>
</fx:root>
