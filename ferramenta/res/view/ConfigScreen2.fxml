<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<fx:root stylesheets="/css/main.css" type="javafx.scene.layout.StackPane" xmlns="http://javafx.com/javafx/8"
         xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Accordion>
            <panes>
                <TitledPane expanded="true" text="Configurações da tela">
                    <content>
                        <VBox>
                            <children>
                                <GridPane vgap="10.0" hgap="10.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES"/>
                                        <ColumnConstraints hgrow="SOMETIMES"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints vgrow="SOMETIMES"/>
                                        <RowConstraints vgrow="SOMETIMES"/>
                                        <RowConstraints vgrow="SOMETIMES"/>
                                    </rowConstraints>
                                    <children>
                                        <Label text="Background"/>
                                        <HBox GridPane.columnIndex="1">
                                            <children>
                                                <TextField fx:id="txtBackScreen" disable="true"/>
                                                <Button mnemonicParsing="false" onAction="#btnChooseBackScreen"
                                                        styleClass="awesome-button" text=""/>
                                            </children>
                                        </HBox>
                                        <Label text="Som" GridPane.rowIndex="1"/>
                                        <HBox GridPane.columnIndex="1"
                                              GridPane.rowIndex="1">
                                            <children>
                                                <TextField fx:id="txtSound" disable="true"/>
                                                <Button mnemonicParsing="false" onAction="#setSound"
                                                        styleClass="awesome-button"
                                                        text=""/>
                                            </children>
                                        </HBox>
                                        <Label text="ID" GridPane.rowIndex="2"/>
                                        <HBox GridPane.columnIndex="1"
                                              GridPane.rowIndex="2">
                                            <children>
                                                <TextField fx:id="txtScreenId"/>
                                                <Button mnemonicParsing="false" text="Ok"/>
                                            </children>
                                        </HBox>
                                    </children>
                                </GridPane>
                            </children>
                        </VBox>
                    </content>
                </TitledPane>
            </panes>
        </Accordion>
    </children>
</fx:root>
