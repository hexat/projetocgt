      <Label text="Número de linhas" GridPane.rowIndex="2" />
      <Label text="Número de colunas" GridPane.rowIndex="3" />
      <TextField fx:id="txtImgName" prefHeight="26.0" prefWidth="78.0" GridPane.columnIndex="1" />
